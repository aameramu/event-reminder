<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical">
  	<TextView 
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="@string/title"
  		android:layout_weight="0.08"
  	/>
  	<EditText
  		android:id="@+id/title"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_weight="0.09"
  		/>
  	<TextView 
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="@string/Priority"
  		android:layout_weight="0.08"
  		/>
  	<LinearLayout 
    	android:layout_width="fill_parent" 
   		android:layout_height="wrap_content"
    	android:layout_weight="0.09"
    	>
    	<Button
  			android:id="@+id/priority4star"
  			android:layout_weight="0.25"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  		/>
 		<Button
  			android:id="@+id/priority3star"
  			android:layout_weight="0.25"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  		/>
  		<Button
  			android:id="@+id/priority2star"
  			android:layout_weight="0.25"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  		/>
  		<Button
  			android:id="@+id/priority1star"
  			android:layout_weight="0.25"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  		/>
  	</LinearLayout>
  	<LinearLayout 
    	android:layout_width="fill_parent" 
   		android:layout_height="wrap_content"
   		android:layout_weight="0.17"
    	>
  		<TextView 
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_weight="0.1667"
  			android:text="@string/date"/>
  		<Button
  			android:id="@+id/dateForReminder"
  			android:layout_weight="0.1667"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			/>
  		<TextView 
	  		android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_weight="0.1667"
  			android:text="@string/time"/>
  		<Button
  			android:id="@+id/timeForReminder"
  			android:layout_weight="0.1667"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			/>
  		<TextView 
	  		android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_weight="0.1667"
  			android:text="@string/alarms"/>
  		<Button
  			android:id="@+id/alarmForReminder"
  			android:layout_width="wrap_content"
  			android:layout_weight="0.1667"
  			android:layout_height="wrap_content"
  			/>
  </LinearLayout>
  	<TextView 
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="@string/notes"
  		android:layout_weight="0.08"
  		/>
  	<EditText
  		android:id="@+id/notes"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:minLines="5"
  		android:scrollbars="vertical"
  		android:gravity="top"
  		android:layout_weight="0.09"
  		/>
    	<LinearLayout 
    	android:layout_width="fill_parent" 
   		android:layout_height="wrap_content"
   		android:layout_weight="0.17"
    	>
  		<TextView 
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_weight="0.1667"
  			android:text="@string/Picture"/>
  		<Button
  			android:id="@+id/Picture"
  			android:layout_weight="0.1667"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			/>
  		<TextView 
	  		android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_weight="0.1667"
  			android:text="@string/Location"/>
  		<Button
  			android:id="@+id/location"
  			android:layout_weight="0.1667"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			/>
  		<TextView 
	  		android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_weight="0.1667"
  			android:text="@string/Voice_Memo"/>
  		<Button
  			android:id="@+id/voiceMemo"
  			android:layout_width="wrap_content"
  			android:layout_weight="0.1667"
  			android:layout_height="wrap_content"
  			/>
  </LinearLayout>
  <LinearLayout 
    	android:layout_width="fill_parent" 
   		android:layout_height="wrap_content"
   		android:layout_weight="0.17"
    	>
  	<Button
  		android:id="@+id/save"
  		android:text="@string/Save"
  		android:layout_weight="0.5"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		/>
 	<Button
  		android:id="@+id/cancel"
  		android:text="@string/Cancel"
  		android:layout_weight="0.5"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		/>
  	</LinearLayout>
</LinearLayout>
